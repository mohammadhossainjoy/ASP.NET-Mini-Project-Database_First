@{
    ViewBag.Title = "Home Page";
}

<main>

    <!-- Welcome Banner -->
    <section style="background: linear-gradient(135deg, #004080, #0066cc); border-radius: 10px; padding: 50px 30px; text-align: center; margin: 30px auto; width: 95%; box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15); color: #fff;">
        <h1 style="font-size: 3rem; font-weight: bold; margin-bottom: 15px;">Welcome to Smart-HR</h1>
        <p style="font-size: 1.25rem; margin-bottom: 25px;">Your complete solution for Employee, Attendance, and Leave Management</p>
        <a href="@Url.Action("Index", "employeeInformations")" style="padding: 12px 30px; font-size: 1.1rem; background-color: #ffc107; color: #000; border-radius: 6px; text-decoration: none; font-weight: 600;">Get Started</a>
    </section>

    <!-- Core Features -->
    <div class="row text-center" style="margin-top: 60px; margin-bottom: 40px;">
        <div class="col-md-4">
            <div style="background-color: #ffffff; padding: 30px 20px; margin: 15px; border-radius: 10px; box-shadow: 0 4px 16px rgba(0,0,0,0.1);">
                <h3 style="color: #0056b3;">👥 Manage Employees</h3>
                <p>Easily create, update, view, and delete employee records with our UI interface.</p>
                <a href="@Url.Action("Index", "employeeInformations")" class="btn btn-outline-primary">Go to Employee</a>
            </div>
        </div>
        <div class="col-md-4">
            <div style="background-color: #ffffff; padding: 30px 20px; margin: 15px; border-radius: 10px; box-shadow: 0 4px 16px rgba(0,0,0,0.1);">
                <h3 style="color: #28a745;">🕒 Attendance Tracking</h3>
                <p>Track daily attendance, entry/exit times, and logs for reporting and HR reviews.</p>
                <a href="@Url.Action("Index", "AttendanceEntries")" class="btn btn-outline-success">Track Attendance</a>
            </div>
        </div>
        <div class="col-md-4">
            <div style="background-color: #ffffff; padding: 30px 20px; margin: 15px; border-radius: 10px; box-shadow: 0 4px 16px rgba(0,0,0,0.1);">
                <h3 style="color: #dc3545;">📝 Leave Management</h3>
                <p>Submit leave requests, review status, and maintain leave history for transparency.</p>
                <a href="@Url.Action("Index", "LeaveEntries")" class="btn btn-outline-danger">Manage Leaves</a>
            </div>
        </div>
    </div>

    <!-- Vision, Mission, Help -->
    <section style="margin-top: 60px; margin-bottom: 40px; padding: 40px 30px; background: linear-gradient(to right, #e9ecef, #f8f9fa); border-radius: 10px;">
        <div class="row text-center">
            <div class="col-md-4">
                <h4 style="color: #333;">💡 Our Vision</h4>
                <p>To simplify HR operations through an integrated and efficient digital platform.</p>
            </div>
            <div class="col-md-4">
                <h4 style="color: #333;">🎯 Our Mission</h4>
                <p>Empowering organizations with tools to manage employee data and attendance effortlessly.</p>
            </div>
            <div class="col-md-4">
                <h4 style="color: #333;">📞 Need Help?</h4>
                <p>Have questions or feedback? <a href="@Url.Action("Contact", "Home")">Contact our team</a> anytime.</p>
            </div>
        </div>
    </section>

</main>
